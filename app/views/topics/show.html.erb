<h1><%= @topic.name %></h1>

<% if can? :update, @topic %>
  <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-primary btn-mini' %>
<% end %>

<% if can? :destroy, Topic %>
    <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-large btn-danger', confirm: 'Are you sure you want to delete this topic?' %>
<% end %>

<div class="row">
  <div class="span8">
    <p class="lead"><%= @topic.description %></p>
    <% @posts.each do |post| %>
      <div class="media">
        <%= render partial: 'votes/voter', locals: { topic: @topic, post: post } %>
        <div class="media-body">
          <h4 class="media-heading">
            <%= image_tag(post.image.thumb.url) if post.image? %><%= link_to (markdown post.title), [@topic, post] %>
          </h4>
          <small>
            <%= image_tag(post.user.avatar.tiny.url) if post.user.avatar? %>
            submitted <%= time_ago_in_words(post.created_at) %> ago by 
            <%= post.user.name %><br/>
            <%= post.comments.count %> Comments
          </small>
        </div>
      </div>
    <% end %>
    <div class="span4">
    <% if can? :create, Post %>
      <%= link_to "New Post", new_topic_post_path(@topic,@post), class: 'btn btn-info' %>
    <% end %>
    </div>
    <center> <%= will_paginate @posts %> </center>
  </div>
</div>