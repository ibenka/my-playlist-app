<h1>Genres</h1>

<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-12">
    <% if can? :create, Topic %>
      <%= link_to "New Genre", new_topic_path, class: 'btn btn-info' %>
    <% end %>
    <% @topics.each do |topic| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to topic.name, topic %>
          </h4>
          <small>
            <%= topic.description %>
          </small>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-xs-12 col-sm-12 col-md-12">
    <center> 
    <%= will_paginate @topics %> 
    </center>
  </div>
</div>