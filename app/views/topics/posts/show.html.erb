<h1><%= markdown @post.title %></h1>

<div class="row">
  <div class="span8">
    <small>
      <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
      submitted <%= time_ago_in_words(@post.created_at) %> ago by 
      <%= @post.user.name %>

      <% if can? :edit, @post %>
        <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-mini' %>
      <% end %>
      <% if can? :destroy, @post %>
        <%= link_to "Delete Post", [@topic, @post], method: :delete, class: 'btn btn-large btn-danger', confirm: 'Are you sure you want to delete this post?' %>
      <% end %>
    </small>

    <p><%= image_tag(@post.image.url) if @post.image? %></p>
    <p><%= markdown @post.body %></p>

    <% unless @post.playlists.count == 0 %>
    <div>
      <% @playlist.each do |song| %>
        <% begin %>
        <% embed_info = @client.get('/oembed', :url => song.url) %>
        <% rescue Soundcloud::ResponseError => e%>
          <%=  "Invalid Entry - Not a Valid Soundcloud URL" %>
        <% end %>
        <% if embed_info %>
        <%= embed_info['html'].html_safe %>
        <% end %>
        <br />
        <%= link_to "Edit Entry", edit_topic_post_playlist_path(@topic, @post, song[:id]), class: 'btn btn-large btn-primary' %>
        <br />
      <% end %>
    </div>
    <% end %>
    <br />

    <%= link_to "Add Song", new_topic_post_playlist_path(@topic, @post), class: 'btn btn-large btn-primary' %>
  </div>

  <div>
    <%= render partial: 'votes/voter', locals: { topic: @topic, post: @post } %>
    <h3><%= pluralize(@post.points, 'point') %></h3>
    <small>
      <%= pluralize(@post.up_votes, 'up vote') %>, 
      <%= pluralize(@post.down_votes, 'down vote') %>
    </small>
  </div>
  <%= render partial: 'favorites/favorite', locals: { topic: @topic, post: @post } %>
  </br>
    <div class="span4">
    <% if can? :comment, @comment %>
    <hr />
    <a href="#" class="js-show-hide" data-selector="js-new-comment">Add Comment</a>
    <br />
    <div class="js-new-comment">
      <%= render partial: "comments/form", locals: { topic: @topic, post: @post, comment: @comment } %>
    </div>
    <% end %>
  </div>
  <div class="span4">
    <hr />
    <h4> Comments </h4>
    <h5 class='js-comments-count'><%= @post.comments.count %> Comments</h5>
    <div class="js-comments">
    <%=  render partial: 'comments/comment', collection: @post.comments %>
    </div>
  </div>
</div>