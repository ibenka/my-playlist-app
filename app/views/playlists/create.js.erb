<% if @playlist.valid? %>
  $(".js-songs").append("<%= escape_javascript(render(@playlist)) %>");
  $(".js-add-song").replaceWith("<%= escape_javascript(render partial: 'playlists/form', locals: { topic: @topic, post: @post, playlist: @new_playlist }) %>");
<% else %>
  $(".js-add-song").replaceWith("<%= escape_javascript(render partial: 'playlists/form', locals: { topic: @topic, post: @post, playlist: @playlist }) %>");
  <% end %>